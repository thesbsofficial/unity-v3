    <script src="/scripts/nav-lite.js" defer></script>
    <script>
        // Sticky reminder bar
        window.addEventListener('scroll', function() {
            const reminder = document.getElementById('sticky-reminder');
            if (window.scrollY > 250) {
                reminder.classList.add('visible');
            } else {
                reminder.classList.remove('visible');
            }
        });

        // Accordion functionality with analytics
        document.querySelectorAll('.accordion-header').forEach(button => {
            button.addEventListener('click', () => {
                const accordionItem = button.parentElement;
                const isActive = accordionItem.classList.contains('active');
                const sectionName = button.textContent.trim();
                
                // Track accordion opens (ready for analytics integration)
                if (!isActive) {
                    console.log('Accordion opened:', sectionName);
                    // Future: gtag('event', 'accordion_open', { section: sectionName });
                }
                
                accordionItem.classList.toggle('active');
                button.setAttribute('aria-expanded', !isActive);
            });
        });

        // Community toggle with analytics
        function toggleCommunity(event) {
            event.preventDefault();
            const content = document.getElementById('community-content');
            const isVisible = content.classList.contains('visible');
            content.classList.toggle('visible');
            
            // Track community expansion (ready for analytics integration)
            if (!isVisible) {
                console.log('Community section opened');
                // Future: gtag('event', 'community_opened');
            }
        }

        // Track WhatsApp template clicks (ready for analytics integration)
        document.querySelectorAll('a[href*="wa.me"]').forEach(link => {
            link.addEventListener('click', (e) => {
                const templateType = link.textContent.includes('Multiple') ? 'multiple_items' : 'single_item';
                console.log('WhatsApp template clicked:', templateType);
                // Future: gtag('event', 'whatsapp_template_click', { template_type: templateType });
            });
        });

        // Track social platform clicks
        document.querySelectorAll('a[href*="instagram"], a[href*="snapchat"]').forEach(link => {
            link.addEventListener('click', (e) => {
                const platform = link.href.includes('instagram') ? 'instagram' : 'snapchat';
                console.log('Social platform clicked:', platform);
                // Future: gtag('event', 'social_platform_click', { platform: platform });
            });
        });
    </script>
