    <!-- MAIN CONTENT -->
    <main class="main">
        <div class="container">
            <!-- HERO SECTION -->
            <section class="hero" style="position: relative;">
                <button class="sbs-help-btn" data-help="shop-how-to-buy" title="How to buy">?</button>
                <p class="hero-kicker">üëë King of Pre-Owned Fashion in Dublin</p>
                <h1>SBS Shop</h1>
                <p>Reserve premium streetwear and sneakers straight from the catalogue, then check out or DM for
                    same-day pickup.</p>
            </section>

            <!-- FILTERS -->
            <section class="filters">
                <div class="category-pills">
                    <button class="category-pill active" data-category="all"
                        onclick="filterByCategory('all')">All</button>
                    <button class="category-pill" data-category="BN-CLOTHES"
                        onclick="filterByCategory('BN-CLOTHES')">Brand New ‚Ä¢ Clothes</button>
                    <button class="category-pill" data-category="BN-SHOES" onclick="filterByCategory('BN-SHOES')">Brand
                        New ‚Ä¢ Shoes</button>
                    <button class="category-pill" data-category="PO-CLOTHES"
                        onclick="filterByCategory('PO-CLOTHES')">Pre-Owned ‚Ä¢ Clothes</button>
                    <button class="category-pill" data-category="PO-SHOES"
                        onclick="filterByCategory('PO-SHOES')">Pre-Owned ‚Ä¢ Shoes</button>
